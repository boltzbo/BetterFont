{
	"name": "Better Font on Windows",
	"short_name": "Better Font",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Improve websites appearance on Windows with better Mac-only fonts replacement.",
	"homepage_url": "https://github.com/boltzbo/BetterFont",
	"web_accessible_resources": [
		"fonts/*.*"
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"content_scripts": [{
			"run_at": "document_start",
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/inject.js"
			]
		}
	]
}
